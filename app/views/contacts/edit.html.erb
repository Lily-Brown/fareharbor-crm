<div class='col-md-8 col-md-offset-2'>
  <div class='row'>
    <div class='header'>
      Edit Contact Information
    </div>
  </div>
  <div class='row'>
    <%= form_for @contact, :as => :contact, :url => customer_contact_path(@customer,@contact) do |f| %>
      <div class='new-contact'>
        <div class='input-field for-group'>
          <label for='First Name'>First Name</label>
          <%= f.text_field :first_name, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Last Name'>Last Name</label>
          <%= f.text_field :last_name, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Title'>Title</label>
          <%= f.text_field :title, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Work Phone Number'>Work Phone Number</label>
          <%= f.text_field :work_phone, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='E-mail Address'>E-mail Address</label>
          <%= f.email_field :email_address, class: 'form-control' %><br/>
        </div>
        <%= link_to 'Cancel', customer_contact_path, class: 'button' %>
        <%= f.submit 'Save Changes', class: 'button' %>
      </div>
    <% end %>
  </div>
</div>