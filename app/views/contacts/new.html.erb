<div class='col-md-8 col-md-offset-2'>
  <div class='row'>
    <div class='header'>
      Add New Contact
    </div>
  </div>
  <div class='row'>
    <%= form_for [@customer, @contact] do |f| %>
      <div class='new-contact'>
        <div class='input-field col s6'>
          <label for='First Name'>First Name</label>
          <%= f.text_field :first_name %><br/>
        </div>
        <div class='input-field col s6'>
          <label for='Last Name'>Last Name</label>
          <%= f.text_field :last_name %><br/>
        </div>
        <div class='input-field col s6'>
          <label for='Title'>Title</label>
          <%= f.text_field :title %><br/>
        </div>
        <div class='input-field col s6'>
          <label for='Work Phone Number'>Work Phone Number</label>
          <%= f.text_field :work_phone %><br/>
        </div>
        <div class='input-field col s6'>
          <label for='E-mail Address'>E-mail Address</label>
          <%= f.text_field :email_address %><br/>
        </div>
        <div class='input-field col s6'>
          <label for='Make Primary Contact'>Make Primary Contact</label>
          <%= f.check_box :is_primary %><br/>
        </div>
        <%= link_to 'Cancel', customer_contacts_path %>
        <%= f.submit 'Save Changes' %>
      </div>
    <% end %>
  </div>
</div>