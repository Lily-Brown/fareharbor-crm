<div class='col-md-8 col-md-offset-2'>
  <div class='row'>
    <div class='header'>
      Edit Customer Information
    </div>
  </div>
  <div class='row'>
    <%= form_for @customer do |f| %>
      <div class='customer'>
        <div class='input-field for-group'>
          <label for='Name'>Customer Name</label>
          <%= f.text_field :name, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Address'>Street Address</label>
          <%= f.text_field :street_address, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='City'>City</label>
          <%= f.text_field :city, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='State'>State</label>
          <%= f.text_field :state, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Zip Code'>Zip Code</label>
          <%= f.text_field :zip_code, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Work Phone Number'>Work Phone Number</label>
          <%= f.text_field :work_phone, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Last Contact Date'>Last Contact Date</label>
          <%= f.date_field :last_contact_date, class: 'form-control' %><br/>
        </div>
        <%= link_to 'Cancel', customer_path, class: 'button' %>
        <%= f.submit 'Save Changes', class: 'button' %>
      </div>
    <% end %>
  </div>
</div>