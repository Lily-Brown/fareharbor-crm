<div>
  <div class="@customer">
    <h1><%= @customer.name %></h1>
    <p>
      <%= @customer.street_address %></br>
      <%= @customer.city %>, <%= @customer.state %> <%= @customer.zip_code %></br>
      <%= @customer.work_phone %></br>
      <% if @customer.primary_contact %>
        <%= link_to @customer.primary_contact.full_name %></br>
      <% end %>
    </p>
    <p>
      <%= link_to 'Edit Customer', edit_customer_path(@customer) %></br>
      <%= link_to 'Delete Customer', customer_path(@customer), method: :delete, 
        :data => {:confirm => 'Are you sure you want to delete this Customer?'} %>
    </p>
  </div>
</div>