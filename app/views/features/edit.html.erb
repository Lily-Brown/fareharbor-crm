<div class='container'>
  <div class='header'>
    Edit Feature Information
  </div>
  
  <%= form_for @feature, :as => :feature, :url => customer_feature_request_feature_path(@customer,@feature_request,@feature) do |f| %>
    <div class='new-feature'>
      <div class='input-field col s6'>
        <label for='Name'>Name</label>
        <%= f.text_field :name %><br/>
      </div>
      <div class='input-field col s6'>
        <label for='Bug Request'>Bug Request</label>
        <%= f.text_field :bug_request %><br/>
      </div>
      <div class='input-field col s6'>
        <label for='Status'>Status</label>  
        <%= f.select :status, Feature.statuses.keys.to_a %><br/>
      </div>
      <%= link_to 'Cancel', customer_feature_request_feature_path(@customer,@feature_request) %>
      <%= f.submit 'Save Changes' %>
    </div>

  <% end %>
</div>