<div>
  <%= form_for [@customer, @feature_request, @feature] do |f| %>
    <div class='new-feature'>
      <h4>Add New Feature</h4>
      <div class='input-field col s6'>
        <label for='Name'>Name</label>
        <%= f.text_field :name %><br/>
      </div>
      <div class='input-field col s6'>
        <label for='Bug Request'>Bug Request</label>
        <%= f.text_field :bug_request %><br/>
      </div>
      <%= link_to 'Cancel', customer_feature_request_path(@customer,@feature_request) %>
      <%= f.submit 'Save Changes' %>
    </div>

  <% end %>
</div>