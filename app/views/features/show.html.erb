<div class='col-md-8 col-md-offset-2'>
  <div class='row'>
    <div class='header'>
      <%= @feature.name %>
    </div>
  <div class='row'>
    <div class='card'>
      <div class='card-block'>
        <p><strong>Identified In</strong>: <%= link_to @feature.feature_request.name, customer_feature_request_path(@customer,@feature_request) %></p>
        <p>
          <strong>Bug Request</strong>: <%= link_to @feature.bug_request, '#'%></br>
          <strong>Status</strong>: 
            <% if feature.status === 'New' %>
              <span class='label label-danger'>New</span>
            <% elsif feature.status === 'In Progress' %>
              <span class='label label-warning'>In Progress</span>
            <% else feature.status === 'Completed' %>
              <span class='label label-success'>Complete</span>
            <% end %>
            </br>
        </p>
        <p>
          <%= link_to edit_customer_feature_request_feature_path(@customer,@feature_request,@feature), class: 'button button-edit' do %>
            <i class='glyphicon glyphicon-pencil'></i>
          <% end %>
          <%= link_to customer_feature_request_feature_path(@customer,@feature_request,@feature), method: :delete, 
            :data => {:confirm => 'Are you sure you want to delete this Feature?'}, class: 'button button-delete' do %>
            <i class='glyphicon glyphicon-trash'></i> 
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>