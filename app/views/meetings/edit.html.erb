<div class='col-md-8 col-md-offset-2'>
  <div class='row'>
    <div class='header'>
      Edit Meeting
    </div>
    
  </div>
  <div class='row'>
    <%= form_for @meeting, html: { multipart: true } do |f| %>
      <div class='new-feature-request'>
        <div class='input-field for-group'>
          <label for='Name'>Name</label>
          <%= f.text_field :name, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Date'>Date</label>
          <%= f.date_field :date, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Time'>Time</label>
          <%= f.time_field :time, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Location'>Location</label>
          <%= f.text_field :location, class: 'form-control' %><br/>
        </div>        
        <div class='input-field for-group'>
          <label for='Agenda'>Agenda</label>
          <%= f.text_area :agenda, class: 'form-control' %><br/>
        </div>
        <div class='input-field for-group'>
          <label for='Teams'>Teams</label>
          <p>
            <%= f.collection_check_boxes( :team_ids, Team.all, :id, :name, {:prompt => "Please Select a Team"}, {:multiple => true}) do |m| %>
                <%= m.check_box %> <%= m.label %>
            <% end %>
          </p>
        </div>
        <p>
          <%= link_to 'Cancel', meetings_path, class: 'button' %>
          <%= f.submit 'Save Changes', class: 'button' %>
        </p>
      </div>
    <% end %>
  </div>
</div>